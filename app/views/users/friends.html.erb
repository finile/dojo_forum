<div class="container">
  <div class="row">
    <%= render partial: "shared/user_nav" %>
    <div class="col-md-10 col-md-offset-1 requested_friend_list">
      <div class="friend-page-header">
        <h3>Waiting for response</h3>
      </div>
      <% @sent.each do |request| %>
        <div class="col-md-2 col-sm-3 col-xs-5 text-center user-item requested_friend">
          <img src="http://via.placeholder.com/100x100">
          <h5><%= request.friend.name %></h5>
        </div>
      <% end %>
    </div>
    <div class="col-md-10 col-md-offset-1 received_friend_list">
      <% @received.each do |request| %>
        <div class="col-md-2 col-sm-3 col-xs-5 text-center user-item received_friend">
          <img src="http://via.placeholder.com/100x100">
          <h5><%= request.user.name %></h5>
          <div class="btn-group">
            <%= link_to 'Accept', friend_requests2_path(request.id), method: :patch, class: 'btn btn-info btn-raised btn-sm' %> <br>
            <%= link_to 'Ignore', friend_requests2_path(request.id), method: :delete, class: 'btn btn-danger btn-simple btn-sm' %>
          </div>
        </div>
      <% end %>
    </div>    

    <div class="col-md-10 col-md-offset-1 friend_list ">
      <% @friends.each do |friend| %>
        <div class="col-md-2 col-sm-3 col-xs-5 text-center user-item friend">
          <img src="http://via.placeholder.com/100x100">
          <h5><%= friend.name %></h5>
          <% if current_user.friends.include?(friend) %>
          <%= link_to "Remove friend", friendship2_path(friend), method: :delete, class: "btn btn-danger btn-raised" %>
        <% end %>
        </div>
      <% end %>
    </div>      
  </div>
</div>
